{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["plugin:react/recommended", "airbnb", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-console": "off",
    "object-shorthand": "off",
    "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": [
      0,
      {
        "extensions": [".jsx", ".js"]
      }
    ]
  }
}
